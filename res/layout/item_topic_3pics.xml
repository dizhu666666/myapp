<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dp_8"
    android:layout_marginLeft="@dimen/dp_8"
    android:layout_marginRight="@dimen/dp_8"
    android:layout_marginStart="@dimen/dp_8"
    android:background="@drawable/bg_stroke_top5"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_16" >

        <TextView
            android:id="@+id/topic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_10"
            android:singleLine="true"
            android:textSize="@dimen/textsize_content_smaller" />

        <TextView
            android:id="@+id/topic_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_8"
            android:singleLine="true"
            android:textSize="@dimen/textsize_content_smalle_12sp" />

        <include
            android:id="@+id/pics_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/view_module_3imgs_h"
            android:background="@color/background" />
    </LinearLayout>

    <include
        android:id="@+id/topic_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginStart="@dimen/dp_8"
        layout="@layout/view_topic_tips" />

</LinearLayout>